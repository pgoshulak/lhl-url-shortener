<!DOCTYPE html>
<html lang="en">
<head>
  <title>TinyApp</title>
  <% include ./partials/_head %>
</head>
<body>
<% include ./partials/_header %>
<div class="container">
  <a class="btn btn-lg btn-primary" href='/urls/new'>Add new URL</a>
    <ul class="list-group">
      <% for (key in urls) { %>
        <li class="list-group-item clearfix">
          <strong class="shortUrl"><%= key %></strong> <small><%= urls[key].longUrl %></small>
          <span class="float-right">
            <div class="btn-group" role="group">
              <form action="/urls/<%= key %>">
                <button class="btn btn-sm btn-outline-primary" type='submit'>Edit</button>
              </form>
              <form method="POST" action="/urls/<%= key %>/delete">
                <button class="btn btn-sm btn-outline-danger" type='submit'>Delete</button>
              </form>
            </div>
          </span>
        </li>
      <% }
    %>
  </ul>
</div>
</body>
</html>